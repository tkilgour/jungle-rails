<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8">
        <% if current_user %>
          <%= form_for [@product, @review] do |f| %>

            <% if f.object.errors.any? %>
              <div class="alert alert-danger">
                <strong>The following errors prevented saving:</strong>
                <ul>
                  <% f.object.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class: "form-control"%>
            </div>

            <div class="form-group">
              <%= f.label :rating %>
              <%= select(:review, :rating, [5, 4, 3, 2, 1], include_blank: true)%>
            </div>

            <%= f.submit 'Submit Review', class: 'btn btn-primary' %>
          <% end %>
        <% end %>
        <h3>Reviews</h3>
        <% @product.reviews.reverse.each do |r| %>
          <div class="review">
            <div class="review-user-name"><%= "#{r.user.first_name} #{r.user.last_name}" %></div>
            <div class="review-rating">
              <%= star_rating(r.rating) %>
              <% if r.user == current_user %>
                <%= link_to fa_icon('trash'), [@product, r], class: 'btn btn-xs btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
              <% end %>
            </div>
            <div class="review-description"><%= r.description %></div>
          </div>
        <% end %>
      </div>

    </div>

  </article>

</section>
