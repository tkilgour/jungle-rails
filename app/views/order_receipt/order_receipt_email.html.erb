<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
    <h2>Your Jungle order #<%= @order.id %> has been placed.</h2>


    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order_total = 0 %>

        <% @order.line_items.each do |i| %>
          <%= render 'item', product: i.product, quantity: i.quantity %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= '$' + @order_total.to_s %>
          </th>
        </tr>
      </tfoot>
    </table>



  </body>
</html>
